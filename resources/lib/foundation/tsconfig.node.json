{
    "compilerOptions": {
        "composite": true,
        "skipLibCheck": true,
        "lib": ["ES2020"],
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "allowImportingTsExtensions": true,
        "allowSyntheticDefaultImports": true,
        "types": ["node"],
        "noEmit": true
    },
    "include": [
        "vite.config.*",
        "vitest.config.*"
    ]
}
