#!/bin/bash

# Safety check - confirm before deletion
read -p "âš ï¸  This will delete all node_modules and vendor directories. Continue? [y/N] " -n 1 -r
echo
if [[ ! $REPLY =~ ^[Yy]$ ]]; then
    echo "âŒ Aborted"
    exit 1
fi

# Find and delete directories
echo "ğŸ” Searching for directories to remove..."
find . -type d \( -name "node_modules" -o -name "vendor" \) -print0 | while IFS= read -r -d '' dir; do
    echo "ğŸ—‘ï¸  Removing: $dir"
    rm -rf "$dir"
done

echo "âœ… Cleanup complete!"
